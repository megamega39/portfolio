    <div class="space-y-4 mb-6">
      <div class="flex items-center">
        <label class="w-24 text-sm font-medium">金額</label>
        <input type="text" id="modal-price" class="flex-1 border border-gray-300 rounded px-3 py-2 bg-gray-100" readonly>
      </div>
      
      <div class="flex items-center">
        <label class="w-24 text-sm font-medium">配達距離</label>
        <input type="text" id="modal-distance" class="flex-1 border border-gray-300 rounded px-3 py-2 bg-gray-100" readonly>
      </div>
      
      <div class="flex items-center">
        <label class="w-24 text-sm font-medium">時間帯</label>
        <input type="text" id="modal-time-slot" class="flex-1 border border-gray-300 rounded px-3 py-2 bg-gray-100" readonly>
      </div>
      
      <div class="flex items-center">
        <label class="w-24 text-sm font-medium">天候</label>
        <input type="text" id="modal-weather" class="flex-1 border border-gray-300 rounded px-3 py-2 bg-gray-100" readonly>
      </div>
    </div>
    
    <div class="flex justify-end">
      <button id="modal-delete-btn" class="bg-red-500 text-white px-6 py-2 rounded hover:bg-red-600 transition-colors disabled:bg-gray-400 disabled:cursor-not-allowed disabled:opacity-50 disabled:hover:bg-gray-400">
        削除
      </button>
    </div>
  </div>
</div>